{
    "$id": "https://github.com/perfsonar/ls-registration-daemon-v2/blob/schema/schema/service_schema.json",
    "title": "perfSONAR Lookup Service's Service Schema",
    "type": "object",
    "properties": {
        "name": {
            "description": "service name",
            "type": "string"
        },
        "locators": {
            "description": "service locator uris",
            "type": "array",
            "items": {
              "type": "string",
              "format": "uri"
            }
        },
        "version": {
            "description": "service version",
            "type": "string"
        }
    },
    "required": ["name", "locators"],
    "additionalProperties": false
}