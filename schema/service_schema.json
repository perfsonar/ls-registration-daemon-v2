{
    "$id": "http://www.perfsonar.net/service_schema#",
    "title": "perfSONAR Lookup Service Person Schema",
    "type": "object",
    "properties": {
        "name": {
            "description": "Service Name",
            "type": "string"
        },
        "locator": {
            "description": "service locator uris",
            "type": "array",
            "items": {
              "type": "string",
              "format": "uri"
            }
        },
        "version": {
            "description": "Service Version",
            "type": "string"
        },
        "pscheduler_tools": {
            "description": "PScheduler tools installed",
            "type": "array",
            "items": {
              "type": "string"
            }
        },
        "pscheduler_tests_enabled": {
            "description": "Pscheduler tests enabled in the host",
            "type": "array",
            "items": {
              "type": "string"
            }
        }
    }
}