{
    "$id": "https://github.com/perfsonar/ls-registration-daemon-v2/blob/schema/schema/interface_schema.json",
    "title": "perfSONAR Lookup Service Schema",
    "type": "object",
    "properties":{
        "interface_capacity": {
            "type": "integer",
            "description": "interface capacity"
        },
        "interface_name":{
            "type": "string"
        },
        "interface_addresses": {
            "description": "interface addresses",
            "type": "array",
            "items": {
                "anyOf": [
                  {
                    "type": "string",
                    "format": "ipv4"
                  },
                  {
                    "type": "string",
                    "format": "ipv6"
                  }
                ]
              }
        },
        "pscheduler_tests": {
            "description": "pscheduler tests enabled on the interface",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "interface_mtu": {
            "description": "interface MTU",
            "type": "number"
        },
        "interface_mac": {
            "description": "interface mac address",
            "type": "string"
        },
        "host":{
            "$ref": "host_schema.json"
        }
    },
    "required": ["host", "interface_name", "interface_addresses", "pscheduler_tests", "interface_mac"],
    "additionalProperties": false
}