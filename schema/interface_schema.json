{
    "$id": "http://www.perfsonar.net/interface_schema#",
    "title": "perfSONAR Lookup Service Schema",
    "type": "object",
    "properties":{
        "interface_capacity": {
            "type": "integer",
            "description": "Interface capacity"
        },
        "interface_name":{
            "type": "string"
        },
        "interface_addresses": {
            "description": "interface addresses",
            "type": "array",
            "items": {
                "anyOf": [
                  {
                    "type": "string",
                    "format": "ipv4"
                  },
                  {
                    "type": "string",
                    "format": "ipv6"
                  }
                ]
              }
        },
        "pscheduler_tests_enabled": {
            "description": "Pscheduler tests",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "interface_mtu": {
            "description": "Interface MTU",
            "type": "number"
        },
        "interface_mac": {
            "description": "Interface mac address",
            "type": "string"
        },
        "host":{
            "$ref": "/host_schema"
        }
    }
}